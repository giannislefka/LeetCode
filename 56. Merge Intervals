class Solution {
    public int[][] merge(int[][] intervals) {
        
        Comparator<int[]> myComp = new Comparator<>(){
            @Override
            public int compare(int[] arr1, int[] arr2){
                if (arr1[0]<arr2[0]){
                    return -1;
                } else if (arr1[0] > arr2[0]){
                    return 1;
                } else {
                    return 0;
                }
            }
        };
        
        List<int[]> output = new ArrayList<>();
        Arrays.sort(intervals, myComp);
        int[] currentInterval = intervals[0];
        output.add(currentInterval);
        
        for (int[] interval : intervals){
            int currentIntervalBegins = currentInterval[0];
            int currentIntervalEnds = currentInterval[1];
            int loopIntervalBegins = interval[0];
            int loopIntervalEnds = interval[1];
            
            if (currentIntervalEnds>=loopIntervalBegins){
                currentInterval[1] = Math.max(currentIntervalEnds, loopIntervalEnds);
            } else {
                currentInterval = interval;
                output.add(currentInterval);
            }
        }
        
        int[][] out = new int[output.size()][2];
        out = output.toArray(out);
        return out;
        
    }
}
