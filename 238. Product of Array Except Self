//Solution #1
class Solution {
    public int[] productExceptSelf(int[] nums) {
        
        int[] answer = new int[nums.length];
        Set<Integer> indexSet = new HashSet<>();
        
        int bigProduct = 1;
        for (int i=0; i <nums.length; i++){
            if (nums[i]!=0){
                bigProduct = bigProduct * nums[i];
            } else {
                indexSet.add(i);
            }
        }
           
        for (int i=0; i<nums.length; i++){
            if ((nums[i]!=0)&&(indexSet.size()==0)){
                answer[i] = bigProduct / nums[i];
            } else if ((nums[i]==0) && indexSet.size()==1){
                answer[i] = bigProduct;
            } else {
                answer[i]=0;
            }
           
        }       
        return answer;       
    }
}

//Solution #2 (better space complexity)
class Solution {
    public int[] productExceptSelf(int[] nums) {
        
        int[] answer = new int[nums.length];
        answer[0]=1;
        for (int i=1; i<nums.length; i++){
           answer[i] = answer[i-1] * nums[i-1];
        }
        
        int postVar=1;
        for (int i=nums.length-2; i>=0; i--){
           postVar = postVar * nums[i+1]; 
           answer[i] = answer[i] * postVar;
        }
               
        return answer;       
    }
}
