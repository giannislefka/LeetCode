class LRUCache {

    class Node{
        int key;
        int value;
        Node prev;
        Node next;
    }
    
    final Node header = new Node();
    final Node tail = new Node();
    Map<Integer, Node> cache;
    int cap;
    
    public LRUCache(int capacity) {
        cache = new HashMap<>();
        cap = capacity;
        header.next = tail;
        tail.prev = header;
        
    }
    
    public int get(int key) {
        if (!cache.containsKey(key)){
            return -1;
        } else {
            Node n = cache.get(key);
            removeNode(n);
            addNode(n);
            return n.value;
        }    
    }
    
    public void put(int key, int value) {
        if (cache.containsKey(key)){
            Node n = cache.get(key);
            removeNode(n);
            n.value = value;
            addNode(n);
        } else {
            if (cache.size()>=cap){
                Node n = tail.prev;
                cache.remove(n.key);
                removeNode(n);
            }
            Node newNode = new Node();
            newNode.key = key;
            newNode.value = value;
            cache.put(key, newNode);
            addNode(newNode);
        }
    }
    
    
    public void addNode(Node n){
        Node nextNode = header.next;
        n.next = nextNode;
        n.prev = header;
        nextNode.prev = n;
        header.next = n;
    }
    
    public void removeNode(Node n){
        Node nextNode = n.next;
        Node prevNode = n.prev;
        prevNode.next = nextNode;
        nextNode.prev = prevNode;
    }
}
