class Solution {
    public boolean isPalindrome(String s) {
        
        StringBuilder filteredOrig = new StringBuilder();
        StringBuilder filteredStr = new StringBuilder();
        
        for (int i=0; i<s.length(); i++){
            if (Character.isLetterOrDigit(s.charAt(i))){
                filteredOrig.append(Character.toLowerCase(s.charAt(i)));
            }
            if (Character.isLetterOrDigit(s.charAt(s.length()-1-i))){
                filteredStr.append(Character.toLowerCase(s.charAt(s.length()-1-i)));
            }
        }
        
        if (filteredOrig.toString().equals(filteredStr.toString())){
            return true;
        }
        
        return false;
    }
}
